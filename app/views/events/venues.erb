
<!--will use a diff class for form later -->

 <div class='transparento boxboxbox'>
    <div id='move_h1'><br><h1>STEP 2:</h1><br><hr></div>
    <h2 align="center">Add Venue for <%= @event.title %></h2>

    <% if @venues != nil %>
    <% @venues.each do |venue| %>
      <div class="venuebox">
      <%= venue.name %>
      </div>
    <% end %>
  <% end %>

    <form class="form-signin" method="post" action="/events/venues">
      <input type="text" name="name" value="" class="form-control" placeholder="Venue..." required autofocus>
      <br>

      <input type="hidden" name="event_id" value=<%= @event.id %>>
      <input class="btn btn-lg btn-warning stay-bot" type="submit" value="Add Venue">
      <% if @venues.count > 0 %> 
        <a class="btn btn-lg btn-success stay-right stay-bot" href="/events/<%= @event.id %>/guests"> Continue</a>
      <% end %>

    </form>
  </div>





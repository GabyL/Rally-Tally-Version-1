
<!--will use a diff class for form later -->
  <form class="form-signin" method="post" action="/events/new">
   <!--method="POST" action="/login"-->
    <h2>Give your event a name</h2>
    <label for="name" class="sr-only">Event Name</label>
    <input type="text" name="title" value="" class="form-control" placeholder="Event Name... e.g. Party at Emily's or Galina's!!">
    <br>
    <h2>Set a Time</h2>
      <div>
     <select name="hour">
      <option>Hour</option>
      <option name="hour" value="1">1</option>
      <option name="hour" value="2">2</option>
      <option name="hour" value="3">3</option>
      <option name="hour" value="4">4</option>
      <option name="hour" value="5">5</option>
      <option name="hour" value="6">6</option>
      <option name="hour" value="7">7</option>
      <option name="hour" value="8">8</option>
      <option name="hour" value="9">9</option>
      <option name="hour" value="10">10</option>
      <option name="hour" value="11">11</option>
      <option name="hour" value="12">12</option>
    </select>
     <select name="minutes">
      <option>Minutes</option>
      <option name="minutes" value="0">00</option>
      <option name="minutes" value="15">15</option>
      <option name="minutes" value="30">30</option>
      <option name="minutes" value="45">45</option>
    </select>
     <select name="am_pm">
      <option name="am_pm" value="0">AM</option>
      <option name="am_pm" value="12">PM</option>
    </select>
   </div>
    <input class="btn btn-default" type="submit" value="Continue">
<!--     <a class="btn btn-lg btn-primary btn-block" href="/events/[:event_id]/venues"> Continue </a> -->
  </form>


